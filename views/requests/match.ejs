<div class="container">
  <div class="row">
    <div class="col s12 m12 l12">
      <h1>My Requests</h1>
    </div>
  </div>
  <div class="row">
    <ul>
      <% requests.forEach( request => { %>
        <li>
            <div class="col s12 m6">
              <div class="card <%= request.color %>">
                <div class="card-content white-text">
                  <span class="card-title"><%= request.meal_served %></span>
                  <p><%= request.details %></p>
                </div>
                <div class="card-action">
                  <a class="btn waves-effect waves-light" href="/requests/match/show">View Details</a>
                </div>
              </div>
            </div>
          </li>
        <% }) %>
      </ul>
    </div>
</div>
