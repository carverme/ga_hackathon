<div class="container">
  <div class="row">
    <div class="col s12 m12 l12">
      <h1>My Offers</h1>
    </div>
  </div>
  <div class="row">
    <ul>
      <% offers.forEach( offer => { %>
        <li>
            <div class="col s12 m6">
              <div class="card <%= offer.color %>">
                <div class="card-content white-text">
                  <span class="card-title"><%= offer.meal_served %></span>
                  <p><%= offer.details %></p>
                </div>
                <div class="card-action">
                  <a href="#">Message</a>
                </div>
              </div>
            </div>
          </li>
        <% }) %>
      </ul>
    </div>
</div>
